{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "build",
    "target": "es2017",
    "lib": ["es2017"],

    "declaration": false,
    "allowJs": false,
    "noImplicitUseStrict": true,
    "alwaysStrict": false
  },
  "include": ["src/**/*.ts", "src/**/*.js", "test/**/*.ts"],
  "exclude": ["build/**/*"]
}
